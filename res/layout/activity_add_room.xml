<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoom">

    <CheckBox
        android:id="@+id/internet"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mattress"
        android:layout_alignTop="@+id/tv"
        android:text="Wifi" />

    <CheckBox
        android:id="@+id/tv"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/size"
        android:layout_alignParentTop="true"
        android:layout_marginTop="228dp"
        android:text="TV" />

    <CheckBox
        android:id="@+id/ac"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv"
        android:layout_alignEnd="@+id/size"
        android:layout_marginBottom="-228dp"
        android:text="AC"
        android:layout_alignRight="@+id/size" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:paddingLeft="10dp"
        android:text="Room Type:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/size5"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:paddingLeft="10dp"
        android:text="Room Type:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/size4"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/price"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Room Price: "
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/size6"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="91dp"
        android:paddingLeft="10dp"
        android:text="Pictures Count:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/size6"
        android:ems="10"
        android:hint="Enter Price..."
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="187dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/price"
        android:layout_alignTop="@+id/size"
        android:entries="@array/type" />

    <CheckBox
        android:id="@+id/mattress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ac"
        android:layout_marginEnd="55dp"
        android:text="Spare mattress" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/submit"
        android:layout_alignTop="@+id/size6"
        android:textSize="24sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:text="Add Image"
        android:textColor="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add"
        android:layout_marginEnd="85dp"
        android:text="Submit"
        android:textColor="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="147dp"
        android:layout_toStartOf="@+id/count"
        android:text="Facillities"
        android:textSize="24sp" />

</RelativeLayout>